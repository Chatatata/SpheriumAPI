{
  "custom_stop_words": [
    "embedded_schema",
    "schema",
    "defmacro",
    "defenum",
    "using",
    "setup"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "coverage/",
  },

  "terminal_options": {
    "file_column_width": 120
  },

  "skip_files": [
    "lib",
    "test/support",
    "src/views/auxillary/error_helpers.ex"
  ]
}
